{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "",
  "sourceRoot": "src",
  "compilerOptions": { "deleteOutDir": true },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": { "tsConfigPath": "apps/api-gateway/tsconfig.app.json" }
    },
    "users-service": {
      "type": "application",
      "root": "apps/users-service",
      "entryFile": "main",
      "sourceRoot": "apps/users-service/src",
      "compilerOptions": { "tsConfigPath": "apps/users-service/tsconfig.app.json" }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": { "tsConfigPath": "apps/auth-service/tsconfig.app.json" }
    }
  }
}
